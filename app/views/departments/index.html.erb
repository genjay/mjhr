<p id="notice"><%= notice %></p>

<h1>Listing Departments</h1>

<%= form_tag del_selected_departments_path, method: :delete do %>
  <table>
    <thead>
      <tr>
        <th>Uid</th>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @departments.each do |department| %>
        <tr>
          <td><%= check_box_tag "ids[]", department.id %></td>
          <td><%= department.id %></td>
          <td><%= department.uid %></td>
          <td><%= department.name %></td>
          <td><%= link_to 'Show', department %></td>
          <td><%= link_to 'Edit', edit_department_path(department) %></td>
          <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= submit_tag "Delete Selected" , data: { confirm: 'Are you sure?'} %>
<% end %>
